<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- 고정된 전체 템플릿 : 구성 (controller가 반환시키는 값과 일치되지 않도록 이름을 정한다) -->
	<definition name="mainTemplate" template="/WEB-INF/views/tiles/layout.jsp">
		<!-- 반복되는 header는 템플릿으로 정해놓음 -->
		<put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp" />
	</definition>

	<!-- 계속 바뀌는 부분은 분리해서 사용(선택사항) - 고정된 템플릿을 땡겨쓰기 : extends -->
	<!-- name : controller가 반환하는 값으로 위에서부터 읽어가며 해당되는 부분을 찾는다 -->
	
	<!-- home을 타일즈에 적용 -->
	<definition name="home" extends="mainTemplate">
		<put-attribute name="main" value="/WEB-INF/views/home.jsp" />
	</definition>
	
	<!-- 지정값 외의 모든 반환값을 자동으로 타일즈에 적용 : views 아래에서 jsp를 찾는다 -->
	<definition name="*/*" extends="mainTemplate">
		<put-attribute name="main"
			value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>

<!-- 	<definition name="admin/*" extends="adminTemplate">
		<put-attribute name="content"
			value="/WEB-INF/user1/{1}.jsp" />
	</definition> -->
</tiles-definitions>